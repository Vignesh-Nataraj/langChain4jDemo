{
  "info": {
    "name": "LangChain4j Demo API",
    "description": "Complete API collection for testing LangChain4j features with Ollama",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Basic Chat",
      "item": [
        {
          "name": "Simple Chat",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"What is artificial intelligence?\"\n}"
            },
            "url": {"raw": "http://localhost:8080/api/basic-chat/chat"}
          }
        },
        {
          "name": "Ask Question",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"What is the capital of France?\"\n}"
            },
            "url": {"raw": "http://localhost:8080/api/basic-chat/question"}
          }
        },
        {
          "name": "Generate Code",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"Create a Java function to check if a number is prime\"\n}"
            },
            "url": {"raw": "http://localhost:8080/api/basic-chat/generate-code"}
          }
        }
      ]
    },
    {
      "name": "2. Conversational Chat",
      "item": [
        {
          "name": "Chat with Memory",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"My name is John and I like pizza\"\n}"
            },
            "url": {"raw": "http://localhost:8080/api/conversational-chat/chat"}
          }
        },
        {
          "name": "Follow-up Question",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"What is my name and what do I like?\"\n}"
            },
            "url": {"raw": "http://localhost:8080/api/conversational-chat/chat"}
          }
        },
        {
          "name": "Clear Memory",
          "request": {
            "method": "POST",
            "url": {"raw": "http://localhost:8080/api/conversational-chat/clear"}
          }
        }
      ]
    },
    {
      "name": "3. RAG (Knowledge Base)",
      "item": [
        {
          "name": "Add Single Document",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"text\": \"LangChain4j is a Java library for building LLM applications\",\n  \"id\": \"doc1\"\n}"
            },
            "url": {"raw": "http://localhost:8080/api/rag/add-document"}
          }
        },
        {
          "name": "Add Multiple Documents",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"texts\": [\n    \"Ollama is a tool for running LLMs locally on your computer\",\n    \"Spring Boot is a Java framework for building web applications\",\n    \"Vector embeddings represent text as numerical vectors\",\n    \"RAG combines retrieval and generation for better AI responses\"\n  ]\n}"
            },
            "url": {"raw": "http://localhost:8080/api/rag/add-documents"}
          }
        },
        {
          "name": "Search Similar",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"What is LangChain?\",\n  \"maxResults\": 3\n}"
            },
            "url": {"raw": "http://localhost:8080/api/rag/search"}
          }
        },
        {
          "name": "Ask Question (RAG)",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"question\": \"What is Ollama and how does it work?\",\n  \"maxResults\": 3\n}"
            },
            "url": {"raw": "http://localhost:8080/api/rag/ask"}
          }
        },
        {
          "name": "Ask with Sources",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"question\": \"What is Spring Boot?\",\n  \"maxResults\": 3\n}"
            },
            "url": {"raw": "http://localhost:8080/api/rag/ask-with-sources"}
          }
        }
      ]
    },
    {
      "name": "4. AI Services",
      "item": [
        {
          "name": "Sentiment Analysis",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
